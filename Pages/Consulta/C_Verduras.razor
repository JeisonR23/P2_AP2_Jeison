@page "/Verduras"
@inject VerdurasBLL verdurasBLL

<EditForm Model="verduras">
    <div class="card">

        <div class="card-header">
            <h4>Consulta de Verduras</h4>
        </div>
    </div>
    <div class="card-body">
        <button class="btn btn-outline-primary"> <i class="oi oi-magnifying-glass" @onclick="Buscar" /> Buscar </button>
    </div>

    <table class="table table-striped table-hover mt-4" style="cursor: pointer;">

        <thead class="thead">
            <tr class="table">
                <th>VerduraId</th>
                <th>VitaminaId</th>
                <th>Nombre</th>
                <th>Fecha de Creacion</th>
                <th>Observaciones</th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Listverdura)
            {
                <tr>
                    <td>@item.VerduraId</td>
                    <td>@item.VerduraId</td>
                    <td>@item.Nombre</td>
                    <td>@item.FechaCreacion</td>
                    <td>@item.Observaciones</td>
                    <td><a class="btn btn-sm btn-outline-primary oi oi-eye" href="Verdura/@item.VerduraId"> Ver </a></td>

                </tr>
            }
        </tbody>
    </table>
</EditForm>


@code {

    public Verduras verduras { get; set; } = new Verduras();
    public List<Verduras> Listverdura { get; set; } = new List<Verduras>();


    public void Buscar()
    {
        var buscado = verdurasBLL.GetList();
        if (buscado !=null)
        {
            buscado = Listverdura;
        }
        Console.WriteLine($"buscado{buscado.Count()}");
    }






}